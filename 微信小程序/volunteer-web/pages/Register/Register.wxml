<view class="Register">
  <van-toast id="van-toast" />
  <van-dialog id="van-dialog" />

  <view class="RegisterField">

    <view class="Registerh2">注册</view>
  <form class="RegisterForm" bindsubmit="onRegister">
    <van-cell-group>
      <van-field class="Registerfield" label-align="center" clearable maxlength="10" required input-align="center" type="text" left-icon="user-o" placeholder="请输入用户" name="username" />
      <van-field class="Registerfield" label-align="center" clearable maxlength="11" required input-align="center" type="number" left-icon="phone-o" placeholder="请输入手机号" name="tel" />
      <van-field class="Registerfield" label-align="center" clearable maxlength="20" required input-align="center" type="password" left-icon="closed-eye" placeholder="请输入密码" name="password" />
      <van-field class="Registerfield" label-align="center" clearable maxlength="20" required input-align="center" type="password" left-icon="closed-eye" placeholder="请再输入密码" name="password2" />
    </van-cell-group>
    <van-button class="Registerbutton" formType="submit" round block color="#3697FF">注册</van-button>
  </form>
  <view class="Logindiv" bind:tap="onLogin">已有账号，马上登录</view>

  </view>



</view>